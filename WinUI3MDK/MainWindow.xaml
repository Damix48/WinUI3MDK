<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WinUI3MDK.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3MDK"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WinUI3MDK"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SwapChainPanel
            x:Name="swapChainPanel"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            Spacing="4">
            <Button x:Name="laodButton" Click="loadButton_Click">Load</Button>
            <Button x:Name="playPauseButton" Click="playPauseButton_Click">Play/Pause</Button>
        </StackPanel>
    </Grid>
</Window>
